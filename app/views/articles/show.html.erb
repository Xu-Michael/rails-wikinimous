<div class="container">
  <div class="jumbotron">
    <h1 class="display-4"><%= @article.title %></h1>
    <hr class="my-4">
    <p><%= @article.content %></p>
    <p class="lead">
      <%= link_to "Edit article", edit_article_path(@article), class: "btn btn-primary btn-lg" %>
      <%= link_to "Remove article", article_path(@article), method: :delete,
      data: { confirm: "Are you sure?"}, class: "btn btn-primary btn-lg" %>
    </p>
  </div>
  <%= link_to "< Back to article list", articles_path, class: "btn btn-secondary btn-lg" %>
</div>
